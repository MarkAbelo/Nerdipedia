#frontent/Dockerfile
#Build Phase
FROM node:20-slim AS build
WORKDIR /app


COPY package*.json ./
RUN npm install
COPY . .
RUN npm run build

#Serve phase
FROM nginx:alpine
COPY --from=build /app/dist /usr/share/nginx/html
COPY nginx.conf /etc/nginx/conf.d/default.conf
EXPOSE 80
CMD ["nginx", "-g", "daemon off;"]